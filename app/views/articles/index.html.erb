<section>
  <div class="container">
    <div class="row">
      <div class="col-12 mt-4">
      <h1>Listing All Articles</h1>
      <%= link_to 'Create new article', new_article_path %>
      <table class="table">
        <thead>
          <th>Title</th>
          <th>Description</th>
        </thead>
        <% @articles.each do |a| %>
        <tr>
          <td><%= a.title %></td>
          <td><%= a.description %></td>
          <td><%= link_to 'Edit', edit_article_path(a) %></td>
          <td><%= link_to 'Show', article_path(a) %></td>
        </tr>
        <% end %>
      </table>
      </div>
    </div>
  </div>
</section>