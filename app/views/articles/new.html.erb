<section>
  <div class="container">
    <div class="row">
      <div class="col-8 mt-4">
        <h1 class="font-weight-bold">Create an Article</h1>
        <%= form_for @article do |f| %>

        <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control", size: "24x6" %>
        </div>
        
        <div class="form-group">
          <%= f.submit 'Create', class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
