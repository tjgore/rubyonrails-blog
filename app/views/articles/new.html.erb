<section>
  <div class="container">
    <div class="row">
      <div class="col-8 mt-4">
      <% if @article.errors.any? %>
      <p class="text-danger">The following errors are:</p>
        <ul>
        <% @article.errors.full_messages.each do |e| %>
          <li class="text-danger"><%= e %></li>
        <% end %>
        </ul>
      <% end%>
        <h1 class="font-weight-bold">Create an Article</h1>
        <%= form_for @article do |f| %>

        <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control", size: "24x6" %>
        </div>
        
        <div class="form-group">
          <%= f.submit 'Create', class: "btn btn-primary" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
