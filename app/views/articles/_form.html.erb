<%= form_for @article do |f| %>

<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control", size: "24x6" %>
</div>

<div class="form-group">
  <%= f.submit 'Create', class: "btn btn-primary" %>
</div>
<% end %>